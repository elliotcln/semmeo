---
import Section from "../layouts/Section.astro";
---

<Section variant="dark" classes="section--expertises">
  <div class="section-inner">
    <h2>Nos expertises au service de la qualité web</h2>
    <ul class="is-h4--like">
      <li>Accessibilité numérique</li>
      <li>Sobriété & performance</li>
      <li>Language clair</li>
      <li>UX</li>
      <li>SEO</li>
      <li>Privacy</li>
    </ul>
  </div>
</Section>

<style lang="scss">
  @use "../styles/scss/variables";

  $colors: (
    2: "green",
    3: "purple",
    4: "light",
    5: "pink",
  );

  .section-inner {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 2rem;
  }

  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    margin-top: 2vw;

    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: clamp(1rem, 10vw, 2rem);

    @media (width > 48rem) {
      grid-template-columns: repeat(3, 1fr);
    }
    @media (width > 64rem) {
      grid-template-columns: repeat(6, 1fr);
    }

    li {
      max-width: 100%;
      display: flex;
      align-items: center;
    }

    li::before {
      content: "";
      display: block;
      vertical-align: center;
      width: 1.125rem;
      height: 48px;
      border-radius: 2rem;
      background-color: var(--c-yellow);
      flex-shrink: 0;
      margin-right: clamp(0.5rem, 0.5vw, 1rem);
    }

    @each $i, $c in $colors {
      li:nth-child(#{$i})::before {
        background-color: var(--c-#{$c});
      }
    }
  }
</style>
